<p>Name: <%= @location.first.name %></p>
<p>Fuel Type: <%= @location.first.fuel_type %></p>
<p>Access Time: <%= @location.first.access_time %></p>
<p>Street Address: <%= @location.first.street_address %></p>

<ol>
  <% @directions.each do |d| %>
    <p>Time: <%= d[:time] %> | Distance: <%= d[:distance] %></p>
    <% d[:maneuvers].each do |dd| %>
      <li><%= dd[:narrative] %></li>
    <% end %>
  <% end %>
</ol>